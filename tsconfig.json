{
	"compilerOptions": {
		"target": "es5",
		"experimentalDecorators": true,
		"jsx": "react",
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"lib": [
			"es2015"
		]
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": true
}